<Page x:Class="BigPack.Presentation.MaterialsViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BigPack.Presentation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
        Title="MaterialsViewPage" FontFamily="Verdana">

    <Grid>
        <ListView Name="MaterialsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Image Width="70" Grid.Column="0" Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                Resources\picture.png
                            </Image.Source>
                        </Image>
                        <TextBlock Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                        <TextBlock Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" FontSize="16"/>

                        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Title, StringFormat='Тип материала | {0}'}"/>
                        <TextBlock Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" Text="{Binding CountInStock}"/>
                        <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding MinCount}"/>
                        <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding CountInPack}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
